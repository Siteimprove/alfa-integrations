{
  "$schema": "http://json.schemastore.org/package",
  "name": "@siteimprove/alfa-jest",
  "homepage": "https://alfa.siteimprove.com",
  "version": "0.80.2",
  "license": "MIT",
  "description": "Assertion integrations for the Jest testing framework",
  "repository": {
    "type": "git",
    "url": "github:Siteimprove/alfa-integrations",
    "directory": "packages/alfa-jest"
  },
  "bugs": "https://github.com/siteimprove/alfa/issues",
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ]
  },
  "dependencies": {
    "@siteimprove/alfa-act": "^0.107.0",
    "@siteimprove/alfa-assert": "workspace:^",
    "@siteimprove/alfa-future": "^0.107.0",
    "@siteimprove/alfa-hash": "^0.107.0",
    "@siteimprove/alfa-mapper": "^0.107.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0"
  },
  "peerDependencies": {
    "@siteimprove/alfa-act": "^0.107.0",
    "@siteimprove/alfa-future": "^0.107.0",
    "@siteimprove/alfa-hash": "^0.107.0",
    "@siteimprove/alfa-mapper": "^0.107.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@siteimprove/alfa-device": "^0.107.0",
    "@siteimprove/alfa-dom": "^0.107.0",
    "@siteimprove/alfa-http": "^0.107.0",
    "@siteimprove/alfa-rules": "^0.107.0",
    "@siteimprove/alfa-web": "^0.107.0"
  }
}
